
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SelectorDemo</title>
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script>
        $(function () {
            //利用jquery來使用CSS的方法
            $("h1").css("color", "red");
            $("#div1").css("border", "1px solid blue");
            $(".myclass").css("color", "green");
        });
    </script>
</head>
<body>
    <div>
        <div id="div1">
            <h1>Database</h1>
            <div class="myclass">
                SQL
            </div>
            <h1>Programming</h1>
            <div class="myclass">
                ASP.NET MVC
            </div>
            <h1>Management</h1>
            <div class="myclass">
                PMP
            </div>
        </div>
    </div>
</body>
</html>
